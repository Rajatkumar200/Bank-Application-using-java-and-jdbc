package bank;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.*;
public class UserInterface {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		BankImplementation b=new BankImplementation();
		System.out.println("Enter your card number:");
        long cardNo = sc.nextLong();

        System.out.println("Enter your PIN:");
        String inputPin = sc.next();
        try (Connection con = DBUtils.getConnection()) {
            String sql = "SELECT pin, accountId FROM cards WHERE cardNo = ?";
            PreparedStatement ps = con.prepareStatement(sql);
            ps.setLong(1, cardNo);
            ResultSet rs = ps.executeQuery();
            if (rs.next()) {
                String hashedPin = rs.getString("pin");
                long accountId = rs.getLong("accountId");

            if (Password.checkPassword(inputPin, hashedPin)) {
                System.out.println("Authentication Successful!");
                while (true) {
                    System.out.println("\n1. View Balance");
                    System.out.println("2. Withdraw Amount");
                    System.out.println("3. Deposit Amount");
                    System.out.println("4. View Mini Statement");
                    System.out.println("5. Exit");
                    System.out.print("Enter your choice: ");
                    int ch = sc.nextInt();

                    switch (ch) {
                        case 1:
                            b.Balance(accountId);
                            break;
                        case 2:
                            System.out.print("Enter amount to withdraw: ");
                            double withdraw = sc.nextDouble();
                            b.Withdraw(accountId, withdraw);
                            break;
                        case 3:
                            System.out.print("Enter amount to deposit: ");
                            double deposit = sc.nextDouble();
                            b.Deposit(accountId, deposit);
                            break;
                        case 4:
                            b.ViewMiniStmnt(accountId);
                            break;
                        case 5:
                            System.out.println("Thank you! Visit again.");
                            System.exit(0);
                        default:
                            System.out.println("Invalid choice. Try again.");
                    }
                }
            } else {
                System.out.println("Invalid PIN!");
            }
        } else {
            System.out.println("Card not found!");
        }
    } catch (SQLException e) {
        e.printStackTrace();
    }
    sc.close();                 
	}

}
